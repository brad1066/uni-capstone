// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("SUPABASE_URL")
  directUrl    = env("SUPABASE_URL")
  relationMode = "prisma"
}

model UserSession {
  id           Int      @id @unique @default(autoincrement())
  user         User     @relation(fields: [userUsername], references: [username], onDelete: Cascade)
  cookieValue  String
  created      DateTime @default(now())
  userUsername String

  @@index([userUsername], name: "userUsername")
}

model User {
  username       String        @id @unique
  password       String
  title          String
  forename       String
  middleNames    String?
  surname        String
  letters        String?
  contactDetails Contact?      @relation(fields: [contactId], references: [id], onDelete: Cascade)
  role           UserRole
  // Auto Gen - leave untouched
  contactId      Int?
  student        Student?
  teacher        Teacher?
  userSessions   UserSession[]
  resources      Resource[]

  @@index([contactId], name: "contactId")
}

model Student {
  id                 Int      @id @default(autoincrement()) @map("_id")
  user               User     @relation(fields: [username], references: [username], onDelete: Cascade)
  emergencyContact   Contact? @relation(fields: [emergencyContactId], references: [id], onDelete: Cascade)
  termAddress        Address? @relation("termAddress", fields: [termAddressId], references: [id], onDelete: Cascade)
  homeAddress        Address? @relation("homeAddress", fields: [homeAddressId], references: [id], onDelete: Cascade)
  enrolledCourse     Course?  @relation(fields: [courseId], references: [id], onDelete: SetNull)
  modules            Module[]
  // Auto Gen
  username           String   @unique
  emergencyContactId Int?     @unique
  termAddressId      Int?     @unique
  homeAddressId      Int?     @unique
  courseId           Int?

  @@index([courseId])
}

model Teacher {
  id        Int      @id @default(autoincrement()) @map("_id")
  user      User     @relation(fields: [username], references: [username], onDelete: Cascade)
  address   Address? @relation(fields: [addressId], references: [id], onDelete: Cascade)
  modules   Module[]
  // Auto Gen
  username  String   @unique
  addressId Int?     @unique
}

model Course {
  id          Int       @id @default(autoincrement()) @map("_id")
  title       String
  description String?
  websiteURL  String?
  students    Student[]
  modules     Module[]
}

model Module {
  id          Int       @id @default(autoincrement()) @map("_id")
  title       String
  description String?
  websiteURL  String?
  course      Course?   @relation(fields: [courseId], references: [id])
  units       Unit[]
  students    Student[]
  teachers    Teacher[]

  // Auto Gen
  courseId Int?

  @@index([courseId])
}

model Unit {
  id          Int        @id @default(autoincrement()) @map("_id")
  title       String
  description String?
  module      Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  sections    Section[]
  resources   Resource[]
  // Auto Gen
  moduleId    Int

  @@index([moduleId])
}

model Section {
  id          Int        @id @default(autoincrement()) @map("_id")
  title       String
  description String?
  unit        Unit       @relation(fields: [unitId], references: [id], onDelete: Cascade)
  resources   Resource[]
  // Auto Gen
  unitId      Int

  @@index([unitId])
}

model Resource {
  id             Int       @id @default(autoincrement()) @map("_id")
  title          String
  description    String
  content        String
  author         User?     @relation(fields: [authorUsername], references: [username], onDelete: SetNull)
  unit           Unit      @relation(fields: [unitId], references: [id])
  sections       Section[]
  uploads        Upload[]
  // Auto Gen
  authorUsername String?
  unitId         Int

  @@index([authorUsername])
  @@index([unitId])
}

model Upload {
  id         Int       @id @default(autoincrement()) @map("_id")
  title      String
  publicURL  String
  path       String
  Resource   Resource? @relation(fields: [resourceId], references: [id])
  resourceId Int?

  @@index([resourceId])
}

// Collections
model Address {
  id           Int       @id @default(autoincrement()) @map("_id")
  addressLine1 String?
  addressLine2 String?
  town         String?
  stateCounty  String?
  zipPostCode  String?
  studentHome  Student[] @relation("termAddress")
  studentTerm  Student[] @relation("homeAddress")
  teachers     Teacher[]
}

model Contact {
  id               Int       @id @default(autoincrement()) @map("_id")
  label            String?
  email            String?
  mobile           String?
  user             User[]
  studentEmergency Student[]
}

// Enum for User->role
enum UserRole {
  admin
  teacher
  student
  unassigned
}
