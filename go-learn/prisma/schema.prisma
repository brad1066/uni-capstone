// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  username         String             @id @unique
  password         String
  title            String
  forename         String
  middleNames      String?
  surname          String
  letters          String?
  contactDetails   Contact?           @relation(fields: [contactId], references: [id], onDelete: Cascade)
  role             UserRole
  // Auto Gen - leave untouched
  contactId        String?
  student          Student?
  teacher          Teacher?
  userSessions     UserSession[]
  resources        Resource[]
  userVerification UserVerification[]
  submissions      Submission[]

  @@index([contactId], name: "contactId")
}

model Student {
  id                 String   @id @default(uuid())
  user               User     @relation(fields: [username], references: [username], onDelete: Cascade)
  emergencyContact   Contact? @relation(fields: [emergencyContactId], references: [id], onDelete: Cascade)
  termAddress        Address? @relation("termAddress", fields: [termAddressId], references: [id], onDelete: Cascade)
  homeAddress        Address? @relation("homeAddress", fields: [homeAddressId], references: [id], onDelete: Cascade)
  enrolledCourse     Course?  @relation(fields: [courseId], references: [id], onDelete: SetNull)
  modules            Module[]
  // Auto Gen
  username           String   @unique
  emergencyContactId String?  @unique
  termAddressId      String?  @unique
  homeAddressId      String?  @unique
  courseId           String?

  @@index([courseId])
}

model Teacher {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [username], references: [username], onDelete: Cascade)
  address   Address? @relation(fields: [addressId], references: [id], onDelete: Cascade)
  modules   Module[]
  // Auto Gen
  username  String   @unique
  addressId String?  @unique
}

model Course {
  id          String    @id @default(uuid())
  title       String
  description String?
  websiteURL  String?
  students    Student[]
  modules     Module[]
}

model Module {
  id          String       @id @default(uuid())
  title       String
  description String?
  websiteURL  String?
  course      Course?      @relation(fields: [courseId], references: [id])
  units       Unit[]
  students    Student[]
  teachers    Teacher[]
  assignments Assignment[]

  // Auto Gen
  courseId String?

  @@index([courseId])
}

model Assignment {
  id          String       @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime?
  resources   Resource[]
  module      Module?      @relation(fields: [moduleId], references: [id])
  // Auto Gen
  moduleId    String?
  submissions Submission[]

  @@index([moduleId])
}

model Unit {
  id          String     @id @default(uuid())
  title       String
  description String?
  module      Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  sections    Section[]
  resources   Resource[]
  // Auto Gen
  moduleId    String

  @@index([moduleId])
}

model Section {
  id          String     @id @default(uuid())
  title       String
  description String?
  unit        Unit       @relation(fields: [unitId], references: [id], onDelete: Cascade)
  resources   Resource[]
  // Auto Gen
  unitId      String

  @@index([unitId])
}

model Resource {
  id             String       @id @default(uuid())
  title          String
  description    String
  content        String
  author         User?        @relation(fields: [authorUsername], references: [username], onDelete: SetNull)
  unit           Unit?        @relation(fields: [unitId], references: [id])
  sections       Section[]
  uploads        Upload[]
  assignments    Assignment[]
  // Auto Gen
  authorUsername String?
  unitId         String?

  @@index([authorUsername])
  @@index([unitId])
}

model Upload {
  id         String       @id @default(uuid())
  title      String
  publicURL  String
  path       String
  resource   Resource?    @relation(fields: [resourceId], references: [id])
  resourceId String?
  submission Submission[]

  @@index([resourceId])
}

model Submission {
  id             String     @id @default(uuid())
  title          String     @default("Untitled")
  author         User?      @relation(fields: [authorUsername], references: [username], onDelete: SetNull)
  assignment     Assignment @relation(fields: [assignmentId], references: [id])
  upload         Upload     @relation(fields: [uploadId], references: [id])
  // Auto Gen
  authorUsername String?
  assignmentId   String
  uploadId       String

  @@index([authorUsername])
  @@index([assignmentId])
  @@index([uploadId])
}

// Collections
model Address {
  id           String    @id @default(uuid())
  addressLine1 String?
  addressLine2 String?
  town         String?
  stateCounty  String?
  zipPostCode  String?
  studentHome  Student[] @relation("termAddress")
  studentTerm  Student[] @relation("homeAddress")
  teachers     Teacher[]
}

model Contact {
  id               String    @id @default(uuid())
  label            String?
  email            String?
  mobile           String?
  user             User[]
  studentEmergency Student[]
}

// Utiltiy
model UserSession {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [username], references: [username], onDelete: Cascade)
  cookieValue String
  created     DateTime @default(now())
  username    String

  @@index([username])
}

model UserVerification {
  id               String   @id @default(uuid())
  verificationCode String
  user             User     @relation(fields: [username], references: [username], onDelete: Cascade)
  created          DateTime @default(now())
  used             Boolean  @default(false)
  username         String

  @@index([username])
}

// Enum for User->role
enum UserRole {
  admin
  teacher
  student
  unassigned
}
